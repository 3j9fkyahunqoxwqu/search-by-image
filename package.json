{
  "name": "search-by-image",
  "version": "1.2.0",
  "author": "Armin Sebastian",
  "repository": "https://github.com/dessant/search-by-image",
  "license": "MIT",
  "scripts": {
    "build": "NODE_ENV=development gulp build",
    "build:firefox": "NODE_ENV=development TARGET_ENV=firefox gulp build",
    "build:prod": "NODE_ENV=production gulp build",
    "build:prod:firefox": "NODE_ENV=production TARGET_ENV=firefox gulp build",
    "build:ext:prod": "yarn run build:prod && web-ext build -s dist/ -a artifacts/",
    "build:ext:prod:firefox": "yarn run build:prod:firefox && web-ext build -s dist/ -a artifacts/",
    "start": "web-ext run --bc --url 'about:addons' -s dist/",
    "exec": "yarn run build && yarn run start",
    "exec:firefox": "yarn run build:firefox && yarn run start",
    "exec:prod": "yarn run build:prod && yarn run start",
    "exec:prod:firefox": "yarn run build:prod:firefox && yarn run start",
    "inspect": "webpack --profile --json > report.json; webpack-bundle-analyzer report.json --mode static && sleep 6 && rm report.{json,html}",
    "update": "ncu --upgrade --upgradeAll && yarn upgrade --latest"
  },
  "browserslist": ["Firefox >= 52"],
  "dependencies": {
    "@material/button": "^0.3.9",
    "@material/checkbox": "^0.4.0",
    "@material/dialog": "^0.3.3",
    "@material/grid-list": "^0.2.6",
    "@material/select": "^0.3.10",
    "@material/switch": "^0.1.9",
    "@material/theme": "^0.1.7",
    "lodash": "^4.17.4",
    "spinkit": "^1.2.5",
    "typeface-roboto": "^0.0.35",
    "uuid": "^3.1.0",
    "vue": "^2.4.1",
    "vuedraggable": "^2.14.1"
  },
  "devDependencies": {
    "autoprefixer": "^7.1.2",
    "babel-loader": "^7.1.1",
    "babel-plugin-lodash": "^3.2.11",
    "babel-preset-babili": "^0.1.4",
    "babel-preset-env": "^1.6.0",
    "babili-webpack-plugin": "^0.1.2",
    "commander": "^2.11.0",
    "css-loader": "^0.28.4",
    "cssnano": "^3.10.0",
    "del": "^3.0.0",
    "extract-text-webpack-plugin": "^3.0.0",
    "fs-extra": "^3.0.1",
    "gulp": "^3.9.1",
    "gulp-babel": "^6.1.2",
    "gulp-htmlmin": "^3.0.0",
    "gulp-if": "^2.0.2",
    "gulp-imagemin": "^3.3.0",
    "gulp-jsbeautifier": "^2.1.1",
    "gulp-merge-json": "^1.1.0",
    "gulp-postcss": "^7.0.0",
    "gulp-rsvg": "^1.0.2",
    "gulp-sequence": "^0.4.6",
    "lodash-webpack-plugin": "^0.11.4",
    "node-sass": "^4.5.3",
    "npm-check-updates": "^2.12.1",
    "sass-loader": "^6.0.6",
    "shortid": "^2.2.8",
    "vue-loader": "^12.2.2",
    "vue-template-compiler": "^2.4.1",
    "web-ext": "^1.10.1",
    "webpack": "^3.2.0",
    "webpack-bundle-analyzer": "^2.8.3"
  }
}
