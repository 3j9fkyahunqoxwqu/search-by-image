{
  "manifest_version": 2,
  "name": "__MSG_extensionName__",
  "description": "__MSG_extensionDescription__",
  "version": "1.1.0",
  "author": "Armin Sebastian",
  "homepage_url": "https://github.com/dessant/search-by-image",
  "default_locale": "en",

  "applications": {
    "gecko": {
      "id": "{2e5ff8c8-32fe-46d0-9fc8-6b8986621f3c}",
      "strict_min_version": "52.0"
    }
  },

  "icons": {
    "16": "src/icons/app-icon-16.svg",
    "24": "src/icons/app-icon-24.svg",
    "32": "src/icons/app-icon-32.svg",
    "48": "src/icons/app-icon-48.svg",
    "96": "src/icons/app-icon-96.svg",
    "128": "src/icons/app-icon-128.svg"
  },

  "permissions": [
    "contextMenus",
    "storage",
    "tabs",
    "activeTab",
    "notifications",
    "<all_urls>"
  ],

  "content_security_policy": "default-src 'self'; img-src * data:; connect-src *;",

  "options_ui": {
    "page": "src/options/index.html",
    "browser_style": false
  },

  "background": {
    "page": "src/background/index.html"
  },

  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*", "ftp://*/*"],
      "all_frames": true,
      "run_at": "document_start",
      "js": ["src/content/insert.js"]
    }
  ],

  "web_accessible_resources": [
    "src/select/index.html"
  ]
}
